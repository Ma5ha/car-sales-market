generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id            Int                @id @default(autoincrement())
  olxId         Int                @unique(sort: Desc)
  brand         String
  model         String
  manufactured  String
  price         Int
  displacement  Int
  milage        Int
  fuel          String
  transmission  String
  torque        Int
  type          String
  color         String
  priceHistory  PriceHistory[]
  views         Int
  createdAt     DateTime           @default(now())
  olixCreatedAt Int
  refreshed     RefreshedHistory[]
  sold          DateTime?
}

model RefreshedHistory {
  id     Int      @id @default(autoincrement())
  update DateTime
  value  Int
  car    Car      @relation(fields: [carId], references: [id])
  carId  Int
}

model PriceHistory {
  id     Int      @id @default(autoincrement())
  update DateTime
  value  Int
  car    Car      @relation(fields: [carId], references: [id])
  carId  Int
}

